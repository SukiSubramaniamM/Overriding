
import java.util.Scanner;

public class Shapes {

	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);

	        System.out.println("Welcome to Shape Perimeter Calculator!");
	        System.out.println("Which shape do you want to calculate the perimeter for?");
	        System.out.println("1. Square");
	        System.out.println("2. Rectangle");
	        System.out.println("3. Triangle");
	        System.out.print("Enter your choice (1/2/3): ");
	        int choice = scanner.nextInt();
	        
	        if (choice == 1) {
	        	System.out.println("enter the side length of square:");
	        	int squareLength = scanner.nextInt();
	        	 int squarePerimeter = 4 * squareLength ;
	        	System.out.println("Perimeter of square is:" + squarePerimeter);
	        	
	        }
	        else if (choice == 2) {
	        	System.out.println("enter the length of the rectangle:");
	        	int rectLength = scanner.nextInt();
	        	System.out.println("enter the width of the rectangle:");
	        	int rectWidth = scanner.nextInt();
	        	
	        	int rectPerimeter = (rectLength+rectWidth)*2;
	        	System.out.println("Perimeter of triangle is:" + rectPerimeter);
	        	
	        }
	        else {
	        	System.out.println("enter the sideA:");
	        	int sideA = scanner.nextInt();
	        	System.out.println("enter the sideB:");
	        	int sideB = scanner.nextInt();
	        	System.out.println("enter the sideC:");
	        	int sideC = scanner.nextInt();
	        	
	        	int triPerimeter = sideA + sideB +sideC ;
	        	System.out.println("the Perimeter of the triangle:" + triPerimeter);
	        	
	        }
	        scanner.close();
	        
	    }
}
